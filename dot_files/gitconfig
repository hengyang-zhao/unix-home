# vim: set ft=gitconfig noet ts=8 sw=8:
#

[color]
	ui = auto

[core]
	editor = vim

[alias]
	b = branch
	br = branch -a -vv
	co = checkout
	h = log --pretty=format:'%C(bold)%s%C(reset)%C(auto)%d%C(reset)%n%C(yellow)%h%C(reset) -- %C(bold blue)%an (%ar)%C(reset)%n' --graph --abbrev-commit
	hi = log --graph
	s = status -s
	cb = checkout -b
	re = remote -v
	cl = clone --recursive
	wdiff = diff --color-words

[push]
	default = current

[include]
	path = ~/.site_env/git/user
	path = ~/.site_env/git/gitconfig
